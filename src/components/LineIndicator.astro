---
import Spacing from '@/components/Spacing.astro';

interface Props {
    depth: number;
    isLastChild: boolean;
    isInLastFolder: boolean;
    isLastInRootFolder: boolean;
}

const { depth, isLastChild, isInLastFolder, isLastInRootFolder} = Astro.props;
const rangeArray = Array(depth).fill(0);
---
<>
    {rangeArray.map((_, index) => {
        const isSecondLastIndex = index === depth - 1;
        if((isInLastFolder && isSecondLastIndex) || (isLastInRootFolder && index == 0) ) {
           return <><Spacing /></>
        }
        return <>│<Spacing /></>
    })}
    {isLastChild ? '└─' : '├─'}
</>